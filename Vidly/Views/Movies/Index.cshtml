@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<li>@Html.ActionLink("New Movie", "New", "Movies")</li>
@if (!Model.Any())
{
    <h2>There are no movies available.</h2>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "Edit", "Movies", new {Id = movie.Id}, null)
                </td>
                <td>@movie.Genre.GenreName</td>
            </tr>
        }
        </tbody>
    </table>
}